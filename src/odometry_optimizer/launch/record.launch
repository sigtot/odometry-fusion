<launch>
    <node
            pkg="odometry_optimizer"
            type="odometry_optimizer"
            name="odometry_optimizer"
            required="true"
            output="screen"
    />
    <node
            pkg="rosbag"
            name="play"
            type="play"
            args="$(find odometry_optimizer)/rosbag/odometries.bag --clock"
    />
    <node
            pkg="rosbag"
            name="record"
            type="record"
            args="-O $(find odometry_optimizer)/rosbag/paths.bag /optimized_path"
    />
</launch>
